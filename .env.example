# Environment Variables Example
# Copy this file to .env.local and fill in your actual values

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://0x-subrat.vercel.app
NEXT_PUBLIC_SITE_NAME="Subrat Samantaray Portfolio"

# Email Configuration (Optional - for contact form)
RESEND_API_KEY=your_resend_api_key_here
NEXT_PUBLIC_CONTACT_EMAIL=subratsamantaray43@gmail.com

# Analytics (Optional)
NEXT_PUBLIC_GA_ID=your_google_analytics_id
NEXT_PUBLIC_GTM_ID=your_google_tag_manager_id

# Social Media URLs
NEXT_PUBLIC_GITHUB_URL=https://github.com/subrat243
NEXT_PUBLIC_LINKEDIN_URL=https://linkedin.com/in/subrat243
NEXT_PUBLIC_TWITTER_URL=https://x.com/0xSubrat
NEXT_PUBLIC_TELEGRAM_URL=https://t.me/subrat243

# CV/Resume Configuration
NEXT_PUBLIC_CV_URL=https://drive.google.com/file/d/your-cv-file-id/view?usp=sharing

# Feature Flags (Optional)
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_CONTACT_FORM=true
NEXT_PUBLIC_ENABLE_SOCIAL_LINKS=true
NEXT_PUBLIC_ENABLE_CV_DOWNLOAD=true
NEXT_PUBLIC_ENABLE_ANIMATIONS=true
NEXT_PUBLIC_ENABLE_3D_EFFECTS=true

# Development Configuration
NEXT_PUBLIC_DEV_MODE=false
NEXT_PUBLIC_DEBUG=false

# Performance Configuration
NEXT_PUBLIC_ENABLE_IMAGE_OPTIMIZATION=true
NEXT_PUBLIC_ENABLE_LAZY_LOADING=true

# Third-party Services (Optional)
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn_here
NEXT_PUBLIC_HOTJAR_ID=your_hotjar_id_here

# Security Configuration
NEXT_PUBLIC_CONTENT_SECURITY_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline' fonts.googleapis.com; font-src 'self' fonts.gstatic.com; img-src 'self' data: https:; media-src 'self' data: https:; connect-src 'self' https:;

# Build Configuration
NODE_ENV=production
ANALYZE=false
BUNDLE_ANALYZE=false

# Vercel Configuration (Automatically set by Vercel)
# VERCEL=1
# VERCEL_URL=your-deployment-url.vercel.app
# VERCEL_GIT_COMMIT_SHA=git_commit_sha
# VERCEL_GIT_COMMIT_MESSAGE=git_commit_message
